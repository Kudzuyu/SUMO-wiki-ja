<redpen-conf lang="ja">
    <validators>
        <validator name="SentenceLength">
            <property name="max_len" value="100"/>
        </validator>
        <validator name="InvalidSymbol"/>
        <validator name="KatakanaEndHyphen"/>
        <validator name="KatakanaSpellCheck"/>
        <validator name="JapaneseStyle"/>
        <validator name="Okurigana"/>
        <validator name="SymbolWithSpace"/>
        <validator name="CommaNumber"/>
        <validator name="JapaneseAmbiguousNounConjunction"/>
          <!--<validator name="DoubledWord"/> -->
        <validator name="DoubledJoshi"/>
        <validator name="DuplicatedSection"/>
        <validator name="SuggestExpression">
          <property name="dict" value="suggest-expressions.txt" />
        </validator>
        <validator name="SectionLength">
             <property name="max_num" value="1500"/>
        </validator>
        <validator name="ParagraphNumber"/>
    </validators>
    <symbols>
      <symbol name="FULL_STOP" value="。"/>
      <symbol name="COMMA" value="、" />
      <symbol name="LEFT_PARENTHESIS" value="(" before-space="true"/>
      <symbol name="RIGHT_PARENTHESIS" value=")" after-space="true"/>
    </symbols>
</redpen-conf>
